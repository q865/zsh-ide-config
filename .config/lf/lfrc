# ~/.config/lf/lfrc

# -----------------------------------------------------------------------------
# Опции
# -----------------------------------------------------------------------------
# Показывать иконки (требуется Nerd Font)
set icons true

# Показывать скрытые файлы
set hidden true

# Использовать относительные номера строк
set relativenumbers true

# Обтекание текста при прокрутке
set wrapscan false

# -----------------------------------------------------------------------------
# Горячие клавиши (Vim-style)
# -----------------------------------------------------------------------------
# Выход
map q quit

# Навигация
map k up
map j down
map h parent
map l open

# Вверх/вниз на полстраницы
map <c-u> half-up
map <c-d> half-down

# В начало/конец списка
map gg top
map G bottom

# Создание файлов и директорий
map i $read -p "create file: " f; touch $f
map o $read -p "create dir: " d; mkdir $d

# Переименование
map R rename

# Удаление
map D $read -p "delete? (y/n)" c; if [ "$c" = "y" ]; then rm -rf $fx; fi

# -----------------------------------------------------------------------------
# Предпросмотр файлов
# -----------------------------------------------------------------------------
# Для работы предпросмотра могут понадобиться утилиты:
# - bat (для подсветки синтаксиса)
# - pistol (универсальный просмотрщик)
# - file, mediainfo, exiftool (для информации о файлах)
# - atool (для архивов)

set previewer "~/.config/lf/pv.sh"
